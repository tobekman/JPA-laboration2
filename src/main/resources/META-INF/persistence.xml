<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">
    <persistence-unit name="artist_management">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.tobiasekman.entity.Artist</class>
        <class>com.tobiasekman.entity.Album</class>
        <class>com.tobiasekman.entity.ArtistInfo</class>
        <class>com.tobiasekman.entity.Genre</class>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/artist_management"/>
            <property name="jakarta.persistence.jdbc.user" value="root"/>
            <property name="jakarta.persistence.jdbc.password" value="password"/>
        </properties>
    </persistence-unit>
</persistence>